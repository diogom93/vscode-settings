{
    // Editor
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.cursorStyle": "underline",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.definitionLinkOpensInPeek": true,
    "editor.fontFamily": "'Dank Mono', 'Iosevka-SS02-Extended', 'Input Mono Narrow', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.formatOnSave": true,
    "editor.minimap.enabled": false,
    "editor.renderLineHighlight": "gutter",
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "indent",
    // Language specific editor settings
    "[javascript]": {
        "editor.tabSize": 2
    },
    "[json]": {
        "editor.tabSize": 2
    },
    // Files
    "files.eol": "\n",
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    // Workbench
    "breadcrumbs.icons": false,
    "workbench.colorTheme": "Tokyo Night",
    "workbench.iconTheme": "file-icons",
    "workbench.settings.editor": "json",
    // Window
    "window.newWindowDimensions": "maximized",
    // Features
    "explorer.openEditors.visible": 0,
    "search.smartCase": true,
    "debug.console.closeOnEnd": true,
    "scm.defaultViewMode": "tree",
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.confirmOnExit": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.fontFamily": "'Iosevka-SS02-Extended', 'Input Mono Narrow', Menlo, Monaco, 'Courier New', monospace",
    "terminal.integrated.fontSize": 14,
    // Extensions
    // Bracket Pair Colorizer
    "bracket-pair-colorizer-2.showBracketsInRuler": true,
    "bracket-pair-colorizer-2.rulerPosition": "Left",
    // Emmet
    "emmet.triggerExpansionOnTab": true,
    // Eslint
    "eslint.alwaysShowStatus": true,
    "eslint.packageManager": "yarn",
    // Git
    "git.autofetch": true,
    "git.autoStash": true,
    // GitLens
    "gitlens.codeLens.enabled": false,
    "gitlens.views.repositories.location": "scm",
    "gitlens.views.fileHistory.location": "scm",
    "gitlens.views.lineHistory.location": "scm",
    "gitlens.views.compare.location": "scm",
    "gitlens.views.search.location": "scm",
    "gitlens.views.search.enabled": false,
    // NPM
    "npm.enableScriptExplorer": true,
    "npm.packageManager": "yarn",
    // Prettier
    "prettier.packageManager": "yarn",
    // Quokka
    "quokka.showOutputOnStart": false,
    // Typescript
    "javascript.implicitProjectConfig.checkJs": false,
}
